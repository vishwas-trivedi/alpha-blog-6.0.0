<h1>Complete list of articles</h1>
<%= link_to 'Create New Article', new_article_path %>
<br/>
<table>
  <tr>
    <th>Titile</th>
    <th>Description</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description[0,30] + "..."%></td>
      <td><%= link_to 'Show',  article_path(article) %></td>
      <td><%= link_to 'Edit',  edit_article_path(article) %></td>
    </tr>
  <% end %>
</table>